<div class="header-container" id="officer-details" data-officer-id="{{officer.Officer_ID}}">
    <h3>
        Displaying details of #{{officer.Officer_ID}}:
        <span id="First" ondblclick="makeEditable(this)">{{#if officer.First}}{{officer.First}}{{else}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{/if}}</span>,
        <span id="Last" ondblclick="makeEditable(this)">{{#if officer.Last}}{{officer.Last}}{{else}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{/if}}</span>
    </h3>
    <div class="button-container">
        <button onclick="window.location.href='/officer/all';" class="normal-button">Back to All Officers</button>
    </div>
    <div class="button-container">
        <button onclick="confirmDelete('{{officer.Officer_ID}}')" class="normal-button">Delete</button>
    </div>
</div>
<br>
<table>
    <tr style="background: rgb(200, 200, 200)">
        <th>Precinct</th>
        <th>Badge</th>
        <th>Phone</th>
        <th>Status</th>
    </tr>
    <tr>
        <td><span id="Precinct" ondblclick="makeEditable(this)">{{#if officer.Precinct}}{{officer.Precinct}}{{else}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{/if}}</span></td>
        <td><span id="Badge" ondblclick="makeEditable(this)">{{#if officer.Badge}}{{officer.Badge}}{{else}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{/if}}</span></td>
        <td><span id="Phone" ondblclick="makeEditable(this)">{{#if officer.Phone}}{{officer.Phone}}{{else}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{/if}}</span></td>
        <td>
            <select id="Status" class="editable-select" onchange="saveData(this)">
                <option value="A" {{#if officer.StatusActive}}selected{{/if}}>Active</option>
                <option value="I" {{#if officer.StatusInactive}}selected{{/if}}>Inactive</option>
            </select>
        </td>
    </tr>
</table>

<h3>Associated Crimes</h3>
<table>
    <thead>
        <tr>
            <th>Crime ID</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        {{#each crimes}}
        <tr>
            <td><a href="/crime/details/{{this.Crime_ID}}">{{this.Crime_ID}}</a></td>
            <td>{{this.Status}}</td>
            <td><a href="/crime/details/{{this.Crime_ID}}">View Details</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const detailsContainer = document.getElementById('officer-details');
    const officerId = detailsContainer.getAttribute('data-officer-id');

    document.querySelectorAll('#officer-details span, #officer-details select').forEach(element => {
        element.ondblclick = function() {
            if (this.tagName === 'SPAN') {
                this.contentEditable = true;
                this.focus();
                this.onkeypress = function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        this.blur(); // Directly blur out after pressing Enter
                    }
                };
            } else {
                this.disabled = false; // Enable editing for select elements
            }
        };

        element.onblur = function() {
            saveData(officerId, this); // Save the data when the element loses focus
        };
    });
});

function saveData(officerId, element) {
    const field = element.id;
    const value = element.tagName === 'SELECT' ? element.value : element.innerText.trim();

    fetch(`/officer/update/${field}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ id: officerId, value: value })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            console.log('Update successful');
        } else {
            console.error('Update failed');
            alert('Failed to update. Please try again.');
        }
    })
    .catch(error => {
        console.error('Error updating:', error);
    });
}

function confirmDelete() {
    const officerId = document.querySelector('#officer-details').getAttribute('data-officer-id');
    if (confirm("Are you sure you want to delete this officer?")) {
        fetch(`/officer/delete/${officerId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ id: officerId })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Officer successfully deleted');
                window.location.href = '/officer/all'; 
            } else {
                alert('Failed to delete. Please try again.');
            }
        })
        .catch(error => {
            console.error('Error deleting officer:', error);
            alert('Failed to delete. Please try again.');
        });
    }
}
</script>
