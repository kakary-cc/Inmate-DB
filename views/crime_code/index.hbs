<h2>Crime Codes</h2>

<table>
    <thead>
        <tr>
            <th>Code</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        {{#each Crime_code}}
        <tr>
            <td>{{this.Crime_code}}</td>
            <td>{{this.Code_description}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<a href="/crime_code/new">
    <button class="floating-button">Add New Entry</button>
</a>

<style>
    .floating-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 99;
        background-color: white;
        /* White background */
        border: none;
        color: black;
        padding: 15px 32px;
        /* Bigger size */
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        border-radius: 5px;
        /* Rounded corners */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
        /* Soft shadow for depth */
        cursor: pointer;
    }
</style>