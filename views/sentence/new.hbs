<link rel="stylesheet" href="/css/form.css">

<h3>
    Add Sentence for Criminal #{{criminal_ID}}
</h3>
<form method="POST" action="/sentence/new?criminal_id={{criminal_ID}}">
    <div class="form-item">
        <label>Sentence Type*</label>
        <select name="type">
            <option value="J">Jail</option>
            <option value="P">Probation</option>
            <option value="H">House Arrest</option>
            <option value="O">Other</option>
        </select>
    </div>

    <div class="form-item">
        <label>Probation Officer ID</label>
        <input name="probID" placeholder="5 Digits. Only if applicable.">
    </div>

    <div class="form-item">
        <label>Start Date*</label>
        <input type="date" name="startDate" required>
    </div>

    <div class="form-item">
        <label>End Date*</label>
        <input type="date" name="endDate" required>
    </div>

    <div class="form-item">
        <label>Number of Violations</label>
        <input type="number" name="violations" placeholder="0" value=0 min=0 step=1 required>
    </div>

    <div class="form-item">
        <input type="submit" value="Add Sentence">
    </div>
</form>